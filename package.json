{
  "name": "document-preview",
  "displayName": "Document Preview",
  "description": "Configurable preview for HTML, Markdown, reStructuredText and more.",
  "repository": {
    "url": "https://github.com/garlicbreadcleric/vscode-document-preview"
  },
  "license": "MIT",
  "version": "0.1.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "garlicbreadcleric",
  "activationEvents": [
    "onCommand:documentPreview.openDocumentPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "documentPreview.openDocumentPreview",
        "title": "Open Document Preview"
      }
    ],
    "configuration": {
      "title": "Document Preview",
      "properties": {
        "documentPreview.converters": {
          "title": "Converters",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "title": "Converter name",
                "type": "string"
              },
              "tags": {
                "title": "Converter tags",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "fileTypes": {
                "title": "Document file types (e.g. markdown)",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "regex": {
                "title": "RegEx to match file name",
                "type": "string"
              },
              "command": {
                "title": "CLI commands to convert file",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.8.8",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "jsdom": "^22.1.0",
    "open": "^8.4.0"
  }
}
